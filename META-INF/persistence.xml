<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="persistenceUnit">
        <class>com.ljy.courseselect.domain.CourseEntity</class>
        <class>com.ljy.courseselect.domain.GradeMajorEntity</class>
        <class>com.ljy.courseselect.domain.LessonEntity</class>
        <class>com.ljy.courseselect.domain.LessonTimeEntity</class>
        <class>com.ljy.courseselect.domain.SpecificCourseEntity</class>
        <class>com.ljy.courseselect.domain.TeachingPlanEntity</class>
        <class>com.ljy.courseselect.domain.StudentAccountEntity</class>
        <properties>
            <property name="hibernate.connection.url"
                      value="jdbc:mysql://localhost:3306/course_select?characterEncoding=UTF-8&amp;serverTimezone=CTT"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
        </properties>
    </persistence-unit>
</persistence>
